<!DOCTYPE html>
<html>

<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">


<title>  
  LeviathanShop
</title>
<link rel="shortcut icon" type="image/png" href="https://i.etsystatic.com/17857814/r/il/a0b9e0/1660312888/il_570xN.1660312888_417a.jpg"/>
</head>

<body class="bg-dark">

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item  ">
              <a class="nav-link bg" href="/">Home Page<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link " href="/ToateProdusele"> Produse <span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item ">
                <a class="nav-link" href="/Promotii">Promotii<span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item ">
                <a class="nav-link" href="/CosulMeu">Cosul meu<span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item ">
                <a class="nav-link" href="/Recenzii">Recenzii <span class="sr-only">(current)</span></a>
              </li>
              <% if (admin==true) {%>
                <li class="nav-item active">
                  <a class="nav-link" href="/Administrare"> <strong>Admin</strong> <span class="sr-only">(current)</span></a>
                </li>
                <% }%>
              
          </ul>

          <% if (admin==false) {%>
            <form class="form-inline my-2 my-lg-0" action="/Login" method="get" >
              <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Login as admin </button> 
            </form>
            <%}  else {%>
              <form class="form-inline my-2 my-lg-0" action="/Logout" method="get" >
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Logout </button> 
              </form>
              <% } %>

        </div>
      </nav>
     &nbsp;
      &nbsp; 
      <div class="container">
        &nbsp;
        <div class="row text-center text-lg-left">
         
          <% product.forEach(function(a){ %>
            <div class="col-md-4">
                <div class="thumbnail">
                  <a href="/Produs/<%=a._id%>">
                    <img src="<%=a.image %>" alt="" style="width:75%" class="img-thumbnail"> 
                    <dt class="text-warning"><%=a.name  %></dt>
                   </a>
                    <div class="caption">
                      <p class="text-light"><%=a.pret %> lei</p>
                    </div>
                </div>
                <form class="form-inline my-2 my-lg-0" method="get" ></form>
                <% if (a.activare == false) {%>
                <button class="btn btn-info my-2 my-sm-0" type="submit" onclick="location.href='/Activare/<%=a._id%>'" >Activare </button> 
                <% } else {%>
                <button class="btn btn-danger my-2 my-sm-0" type="submit" onclick="location.href='/Dezactivare/<%=a._id%>'" >Dezactivare </button> 
                <% }%>
              </form>
              </div>
              
         <% }) %>
        </div>

      </div>    
    
        
      
